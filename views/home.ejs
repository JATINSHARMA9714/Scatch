<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="../stylesheets/style.css">
  <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"
    rel="stylesheet"
/>
<title>Scatch</title>
</head>
<body>
  <div id="main" class="w-full relative h-screen bg-zinc-100">
    <div id="nav" class="w-full flex items-center justify-between  h-[13vh] border-2 border-b-zinc-700 py-4 px-10 pb-5">
        <div class="flex items-center">
            <h3 class="text-4xl text-black font-semibold">Shop.</h3>
        </div>
        <div class="px-3 flex gap-20 text-black text-xl font-semibold">
            <div class="flex gap-10">
                <a href="/home/cart">Cart</a>
                <a href="">My Account</a>
            </div>
        </div>
    </div>
    <div class="flex w-full h-[87vh] p-10">
        <div class="w-[25%] flex h-full flex-col items-start">
            <div class="flex items-center gap-2">
                <h3 class="text-xl font-semibold">Sort by</h3>
                <form action="/shop">
                    <select class="border-[1px] px-2 py-1" name="sortby" id="">
                        <option value="popular">Popular</option>
                        <option value="newest">Newest</option>
                    </select>
                </form>
            </div>
            <div class="flex flex-col mt-20">
                <a class="block w-fit mb-2" href="">New Collection</a>
                <a class="block w-fit mb-2" href="">All Products</a>
                <a class="block w-fit mb-2" href="">Discounted Products</a>
            </div>
            <div class="mt-32">
                <a class="block w-fit mb-2 text-xl font-semibold" href="">Filter by :</a>
                <a class="block w-fit mb-2 " href="">Availability</a>
                <a class="block w-fit mb-2" href="">Discount</a>
            </div>
        </div>
        <div class="w-[75%] flex flex-col gap-5 h-full">
            <div class="flex items-start gap-5">
                <% products.forEach(function(product){ %>
                    <div  class="item w-60 rounded-md overflow-hidden">
                        <a href="/home/product/<%= product._id %>" class="w-full cursor-pointer h-52 flex items-center justify-center bg-[<%= product.bgColor %>]">
                            <img class="w-full h-full object-contain p-2" src="data:image/png;base64,<%= product.productImage.toString('base64') %>"
                                alt="">
                        </a>
                        <div
                            class="flex justify-between bg-[<%= product.panelColor %>] items-center px-4 py-4 text-[<%= product.textcolor %>]">
                            <div>
                                <h3 class="font-semibold text-xl">
                                    <%= product.productName %>
                                </h3 >
                                <h4 class="font-semibold">â‚¹ <%= product.productPrice %>
                                </h4>
                            </div>
                            <a id="cart" href="/home/addtocart/<%= product._id %>" class="w-9 h-9 flex items-center justify-center rounded-full bg-white" href="">
                                <i class="ri-add-line text-xl hover:font-bold"></i>
                            </a>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>
    <script src="../javascripts/carthandle.js"></script>
</body>
</html>